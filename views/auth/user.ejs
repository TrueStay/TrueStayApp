<%- include("../partials/header") %>
<link rel="stylesheet" href="/stylesheets/user.css">
<div class="container">
	<div class="row">
		<div>
            <div class="profile">
                <div class="back card">
					<img alt="background card" src="/imgs/defCard.jpg" onerror="this.src='/imgs/defCard.jpg';">
                </div>
                <div class="pic">
                    <img alt="profile picture" src="/imgs/defaultProfilePic.png" onerror="this.src='/imgs/defaultProfilePic.png';">
                </div>
                <div class="info">
                    <div class="title">
                        <p><%=user.username%></p>
                    </div>
                    <div class="desc"><%=user.firstName%> <%=user.lastName%></div>
                    <div class="desc"><%=user.email%></div>
                    <div class="desc"><%=user.phone%></div>
                </div>
            </div>
        </div>
	</div>
    <div class="row">
        <a class="button_1" href="/listings/mylistings/<%=user._id%>"><span>View My Listings </span></a>
        <a class="button_2" href=""><span>Edit My Profile </span></a>
    </div>
</div>
<%- include("../partials/footer") %>