<%- include("../partials/header") %>

	<div class="container">
		<H1 style="text-align: center">Edit <%= listing.title%></H1>
		<div class="row" style="width: 30%; margin:40px auto">
			<form action="/listings/<%=listing._id%>?_method=PUT" method="POST">
				<div class="form-group"><input class="form-control" type="text" name="listing[title]" value="<%=listing.title%>"></div>
				<div class="form-group"><input class="form-control" type="number" name="listing[price]" value="<%=listing.price%>" min=0.0 step=0.1></div>
				<div class="form-group"><input class="form-control" type="text" name="listing[image]" value="<%=listing.image%>"></div>
				<div class="form-group"><input class="form-control" type="text" name="listing[desc]" value="<%=listing.desc%>"></div>
				<div class="form-group">
				    <label for="location">Location</label>
				    <input class="form-control" type="text" name="listing[location]" id="location" value="<%= listing.location %>">
				</div>
				<div class="form-group"><button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button></div>
			</form>
			<a href="/listings">Back to All Listings</a>
		</div>
	</div>

<%- include("../partials/footer") %>
